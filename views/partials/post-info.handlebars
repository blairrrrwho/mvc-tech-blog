<div class='card postcard mb-6'>
  <header class="card-header card-header-title has-background-grey-lighter">
    <div class="column">
      <h3 class="has-text-black is-capitalized">
        {{title}}
      </h3>
    </div>
    <div class="column">
      <span class=""> </span>
    </div>
  </header>

  <div class="card-content">
    <div class="content has-text-justified">
      {{post_body}}
    </div>
  </div>

  <b><a>{{user.username}}</a></b>
  <br>
  <a href="https://github.com/{{user.github}}"><i class="fab fa-github"></i></a>
  <br>
  {{format_date created_at}} <a href="/post/{{id}}"></a>

</div>