{{!-- was on the profile.hdb for project 2; lists the user posts on profile page --}}
{{#if posts.length}}
<div class="col-md-6 post-list">
    <h3>Current Post:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
        <div class="col-md-8">
            <h4><a href="/post/{{post.id}}">{{post.name}}</a></h4>
        </div>
        <div class="col-md-4">
            <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
        </div>
    </div>
    {{/each}}
</div>
{{/if}}
</div>
