<div class="wrapper">
  <header>
    <h1 class="has-text-black px-3 py-3 has-text-weight-bold">Another Tech Blog</h1>
    <nav class="navbar mt-2">
      {{#if logged_in}}
      <ul>
        <li>
          <a href="/" class="navbar-item is-hoverable pt-1" id="main-title">
            Homepage</a>
        </li>
        <li>
          <a href="/dashboard" class="navbar-item is-hoverable pt-1">
            Dashboard</a>
        </li>
        <li>
          <a href="/dashboard/create/" class="navbar-item is-hoverable pt-1 mr-4">
            Create Post</a>
        </li>
        <li>
          <a href='/profile'>Profile</a>
        </li>
        <li>
          <button class="navbar-item is-hoverable pt-1 button is-success is-outlined" id="logout">
            Leave</button>
        </li>
      </ul>
      {{else}}
      <ul>
        <li>
          <a href="/" class="navbar-item is-hoverable pt-1 button is-warning">
            Homepage</a><br>
        </li>
        <li>
          <a href="/login" class="navbar-item is-hoverable pt-1 button is-link is-outlined">
            Log In</a><br>
        </li>
        <li>
          <a href="/signup" class="navbar-item is-hoverable pt-1 button is-success is-outlined">
            Sign Up</a>
        </li>
      </ul>
      {{/if}}

    </nav>
  </header>

  <main>
    {{{ body }}}
  </main>

  <footer class="footer rows">
    <div class="content has-text-centered">
      <a href="/">Homepage</a>
      {{#if logged_in}} |
      <a href="/dashboard/">Dashboard</a> |
      <a href="/dashboard/create/">Create Post</a> | <a href="/logout">Leave</a>
      {{else}}
      | <a href="/login">Log In</a> | <a href="/signup">Sign Up</a>
      {{/if}}
    </div>
    <div class="row-is-full content has-text-centered">
      &copy; 2023 blair's blog
      <a href="https://github.com/blairrrrwho"> | <i class="fab fa-github"></i></a> |
      <a href="mailto:blair10324@gmail.com"><i class="far fa-envelope"></i></a>
    </div>
  </footer>
</div>


